# 使用volume创建iris container时，用户创建的数据库不能放在/usr/irissys/mgr下面
# 默认的位置时durable %sys的配置位置，这里是/dur/iconfig/mgr


[Actions]
CreateResource:Name=%DB_Sample,Description="Sample database"
CreateDatabase:Name=Sample,Directory=/usr/irissys/mgr/Sample
CreateNamespace:Name=Sample,Globals=Sample,Interop=1

CreateResource:Name=%DB_Exchange,Description="Exchange database"
CreateDatabase:Name=Exchange,Directory=/usr/irissys/mgr/Exchange
CreateNamespace:Name=Exchange,Globals=Exchange,Interop=1

